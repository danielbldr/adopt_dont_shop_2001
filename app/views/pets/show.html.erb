<h1><%= @pet.name %></h1>

<%=image_tag(@pet.image)%>
<p><%= @pet.description %></p>
<ol>
  <li>Approximate Age: <%= @pet.age %></li>
  <li>Sex: <%= @pet.sex %></li>
  <li>Currently Located At: <%= Shelter.find(@pet.shelter_id).name %></li>
  <li>Adoption Status: <%= @pet.adoption_status %></li>
</ol>

<%= link_to "Update Pet", { :controller => "pets", :action => "edit" }%>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
