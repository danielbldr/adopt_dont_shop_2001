<%= form_tag("/shelters/#{@shelter.id}/pets", method: "post") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:sex, "Sex:") %>
  <%= text_field_tag(:sex) %>

  <%= label_tag(:age, "Approximate Age:") %>
  <%= text_field_tag(:age) %>

  <%= label_tag(:description, "Description:") %>
  <%= text_field_tag(:description) %>

  <%= label_tag(:image, "Image") %>
  <%= text_field_tag(:image) %>

  <%= submit_tag("Create Pet") %>
<% end %>
